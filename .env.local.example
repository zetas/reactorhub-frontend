# Copy this file to .env and fill in your actual values

# Backend URL (Laravel)
APP_NAME=ReeActor
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8000

# Frontend URL (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Patreon OAuth (REQUIRED - Get from https://www.patreon.com/portal/registration/register-clients)
PATREON_CLIENT_ID=your_patreon_client_id_here
PATREON_CLIENT_SECRET=your_patreon_client_secret_here
PATREON_REDIRECT_URI=http://localhost:8000/auth/patreon/callback
PATREON_WEBHOOK_SECRET=your_webhook_secret_here

# Database (PostgreSQL recommended for production)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=reeactor
DB_USERNAME=postgres
DB_PASSWORD=password

# Redis (for queues and caching)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# OpenSearch (for search functionality)
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_SCHEME=http
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
OPENSEARCH_INDEX_PREFIX=reeactor

# Instructions:
# 1. Register your app at https://www.patreon.com/portal/registration/register-clients
# 2. Set redirect URI to: http://localhost:8000/auth/patreon/callback
# 3. Request these scopes for creators: identity, campaigns, campaigns.posts, campaigns.members
# 4. Request these scopes for patrons: identity, identity[email], campaigns.members
# 5. Copy your Client ID and Secret to this file
# 6. Run: php artisan key:generate
# 7. Run: php artisan migrate
# 8. Run: php artisan serve (for backend)
# 9. Run: npm run dev (for frontend in another terminal)